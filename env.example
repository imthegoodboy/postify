# Postify Environment Variables
# Copy this file to .env.local for local development
# For production, set these in Vercel dashboard

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/postify?retryWrites=true&w=majority

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-here

# Lighthouse Storage (IPFS)
LIGHTHOUSE_API_KEY=your_lighthouse_api_key_here

# Stripe Payment Integration (Optional)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Filecoin Integration (Optional)
FILECOIN_API_KEY=your_filecoin_api_key
FILECOIN_WARM_STORAGE_ENDPOINT=your_warm_storage_endpoint
FILECOIN_CDN_ENDPOINT=your_cdn_endpoint
FILECOIN_PAY_API_KEY=your_filecoin_pay_key

# Email Configuration (Optional)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email@gmail.com
EMAIL_SERVER_PASSWORD=your_app_password
EMAIL_FROM=noreply@postify.com